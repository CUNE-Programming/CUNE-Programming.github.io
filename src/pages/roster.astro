---
import Head from "../components/Head.astro";
import Navbar from "../components/Navbar.astro";
import COACH_IAN_KOLLIPARA from "../assets/roster/co-ian-kollipara.jpg";
import ANDREW_BRANDT from "../assets/roster/andrew.jpg";
import JACOB_WOODMANCY from "../assets/roster/jacob-woodmancy.png";
import CADEN_KORELL from "../assets/roster/caden-korell.jpg";
import RosterAbstract from "../components/RosterAbstract.astro";
import ETHAN_LHEUREUX_ROSTER_IMG from "../assets/roster/mem-ethan-lheureux.jpeg";
import ALYSSA_BUTLER from "../assets/roster/alyssa-butler.jpg";
---

<!DOCTYPE html>
<html lang="en">
  <Head title="Concordia Programming Team Roster">
    <meta
      name="description"
      content="Concorida University, Nebraska Programming Team Roster"
    />
  </Head>
  <body>
    <Navbar />
    <h1
      class="bg-primary text-light font-sans font-bold tracking-wide text-center p-12 text-5xl"
    >
      Roster
    </h1>
    <section class="w-full grid lg:grid-cols-3 gap-4">
      <section>
        <h2 class="text-3xl font-bold tracking-wide text-center pb-5">
          Coaches
        </h2>
        <ul>
          <RosterAbstract
            img={COACH_IAN_KOLLIPARA}
            name="Ian Kollipara"
            from="Lincoln, Nebraska"
            role="Assistant Coach"
            program="PhD Student at University of Nebraska - Lincoln"
            projects={[
              ["Escape Room", "/software-development/escape-room"],
              ["Team Website", "/"],
            ]}
          />
        </ul>
      </section>
      <section>
        <h2 class="text-3xl font-bold tracking-wide text-center">Members</h2>
        <ul>
          <RosterAbstract
            img={JACOB_WOODMANCY}
            name="Jacob Woodmancy"
            from="Grant, Nebraska"
            role="Senior"
            program="Computer Science and Mathematics"
            projects={[["Team Website", "/"]]}
          />
          <RosterAbstract
            img={ETHAN_LHEUREUX_ROSTER_IMG}
            name="Ethan L'Heureux"
            from="Cedar Falls, Iowa"
            role="Freshman"
            program="BS Student at Concordia University Nebraska"
            projects={[
              ["Escape Room", "/software-development/escape-room"],
              ["Team Website", "/"],
            ]}
          />
          <RosterAbstract
            img={CADEN_KORELL}
            name="Caden Korell"
            from="Omaha, Nebraska"
            role="Freshman"
            program="Information Technology"
            projects={[
              ["Escape Room", "/software-development/escape-room"],
              ["Team Website", "/"],
            ]}
          />
          <RosterAbstract
            img={ALYSSA_BUTLER}
            name="Alyssa Butler"
            from="Houston, Texas"
            role="Senior"
            program="Business and Computer Science"
            projects={[["Team Website", "/"]]}
          />
          <RosterAbstract
            img={ANDREW_BRANDT}
            name="Andrew Brandt"
            from="Concordia, Missouri"
            role="Team Member"
            program="Computer Science"
          />
        </ul>
      </section>
      <section>
        <h2 class="text-3xl font-bold tracking-wide text-center">Alumni</h2>
      </section>
    </section>
  </body>
</html>
