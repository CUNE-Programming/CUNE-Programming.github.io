---
import { Image } from "astro:assets";
import EscapeRoom from "../assets/escape-room-wide.jpg";
import Navbar from "../components/Navbar.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Our Projects">
  <Navbar />
  <div class="bg-white py-24 sm:py-32">
    <div class="mx-auto max-w-7xl px-6 lg:px-8">
      <div class="mx-auto max-w-2xl lg:mx-0">
        <h1 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">
          Our Projects
        </h1>
        <p class="mt-6 text-lg leading-8 text-gray-600">
          Our team works on a variety of projects for the community, which are
          listed below.
        </p>
      </div>
      <ul
        role="list"
        class="mx-auto mt-20 grid max-w-2xl gap-x-8 gap-y-16 sm:grid-cols-2 lg:mx-0 lg:max-w-none lg:grid-cols-3"
      >
        <li>
          <Image
            src={EscapeRoom}
            class="aspect-[3_/_2] w-full rounded-2xl object-cover"
            alt="Escape Room"
          />
          <h2
            class="mt-6 text-lg font-semibold leading-8 tracking-tight text-gray-900"
          >
            Escape Room
          </h2>
          <p class="text-base leading-7 text-gray-600">
            Fall 2023 â€¢ <a
              class="text-cune-blue hover:underline hover:decoration-cune-blue"
              href="/software-development/escape-room">Visit</a
            >
          </p>
        </li>
      </ul>
    </div>
  </div>
</Layout>

