import type { ImageMetadata } from "astro";
import Hero from "./Hero.astro";

type Props = {
  img: ImageMetadata;
  alt: string;
  href: string;
};

const { img, alt, href } = Astro.props;
---

<li
  @click={`window.location.href = '${href}'`}
  role="link"
  class="relative shadow-2xl transition-all duration-500 hover:-translate-y-5 hover:ring-dark hover:ring-8 hover:ring-offset-accent hover:ring-offset-4 hover:cursor-pointer"
>
  <Hero {img} {alt} class="bg-dark/70">
    <slot />
  </Hero>
</li>
